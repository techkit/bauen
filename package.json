        "@techkit/linter-config": "^0.3.5",
        "eslint": "^8.17.0",
        "prettier": "^2.6.2",
        "release-it": "^15.0.0",
        "typescript": "^4.7.3",
        "yorkie": "^2.0.0"
    }
